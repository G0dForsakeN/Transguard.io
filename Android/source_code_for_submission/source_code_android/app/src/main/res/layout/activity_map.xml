<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="500dp"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/resetMapBtn"
        app:layout_constraintLeft_toRightOf="@id/updateButton"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/northObstacleBTN"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:scaleType="fitCenter"
                android:tint="@color/colorBlack"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_arrow_up" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:id="@+id/eastObstacleBTN"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:tint="@color/colorBlack"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_right" />
        <!--app:layout_constraintTop_toBottomOf="@+id/waypointbtn"-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:id="@+id/southObstacleBTN"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:tint="@color/colorBlack"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_down" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/westObstacleBTN"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:scaleType="fitCenter"
            android:tint="@color/colorBlack"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_left" />

    </LinearLayout>


    </LinearLayout>



    <ToggleButton
        android:id="@+id/addobstaclebtn"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_baseline_add_location_24"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textOff="ADD OBSTACLE"
        android:textOn="CANCEL"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/waypointbtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/manualAutoBtn"
        android:layout_width="201dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:paddingRight="150dp"
        android:switchPadding="-220dp"
        android:text="MANUAL"
        android:textAlignment="center"
        android:textOff="@string/manual"
        android:textOn="@string/auto"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startpointbtn"
        app:layout_constraintVertical_bias="0.15" />

    <ImageButton
        android:id="@+id/directionBTN"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_background"
        android:scaleType="fitCenter"
        android:tint="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/manualAutoBtn"
        app:layout_constraintTop_toBottomOf="@+id/waypointbtn"
        app:srcCompat="@drawable/change_direction"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/clearbtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_background"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/manualAutoBtn"
        app:layout_constraintTop_toBottomOf="@+id/waypointbtn"
        app:srcCompat="@drawable/ic_clear"
        tools:ignore="SpeakableTextPresentCheck" />

    <ToggleButton
        android:id="@+id/startpointbtn"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_baseline_add_location_24"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textOff="SET STARTPOINT"
        android:textOn="CANCEL"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/waypointbtn"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_baseline_add_location_24"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textOff="SET WAYPOINT"
        android:textOn="CANCEL"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/startpointbtn"
        app:layout_constraintTop_toTopOf="parent"
 />

    <Button
        android:id="@+id/resetMapBtn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_baseline_restore_24"
        android:text="RESET MAP"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addobstaclebtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_baseline_update_24"
        android:text="UPDATE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>