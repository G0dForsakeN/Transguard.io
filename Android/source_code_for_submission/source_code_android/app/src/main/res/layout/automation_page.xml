<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:text="Fastest Path Timer"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/exploreTimeTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Image Recognition Timer"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fastestTimeTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exploreTimeTextView"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/timer_box"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/fastestTimeTextView"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/timer_box"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@+id/exploreTimeTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ToggleButton
        android:id="@+id/exploreToggleBtn"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/control_background"
        android:elevation="2dp"
        android:text="ToggleButton"
        android:textColor="@color/colorWhite"
        android:textOff="Fastest Path"
        android:textOn="STOP"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/exploreTimeTextView"
        app:layout_constraintTop_toBottomOf="@+id/exploreTimeTextView" />

    <ToggleButton
        android:id="@+id/fastestToggleBtn"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/control_background"
        android:elevation="2dp"
        android:text="ToggleButton"
        android:textColor="@color/colorWhite"
        android:textOff="Image Rec"
        android:textOn="STOP"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fastestTimeTextView"
        app:layout_constraintTop_toBottomOf="@+id/fastestTimeTextView" />

    <ImageButton
        android:id="@+id/fastestResetImageBtn"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/c_control_background"
        android:paddingBottom="10dp"
        android:src="@drawable/reset_image"
        app:layout_constraintStart_toEndOf="@+id/exploreToggleBtn"
        app:layout_constraintTop_toTopOf="@+id/exploreToggleBtn" />

    <ImageButton
        android:id="@+id/exploreResetImageBtn"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/c_control_background"
        android:paddingBottom="10dp"
        android:src="@drawable/reset_image"
        app:layout_constraintStart_toEndOf="@+id/fastestToggleBtn"
        app:layout_constraintTop_toTopOf="@+id/fastestToggleBtn" />

    <Button
        android:id="@+id/calibrateButton"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/control_background"
        android:drawableLeft="@drawable/calibrate_image"
        android:drawablePadding="-40dp"
        android:elevation="2dp"
        android:includeFontPadding="false"
        android:paddingLeft="30dp"
        android:text="Calibrate"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/exploreToggleBtn"
        app:layout_constraintTop_toBottomOf="@+id/exploreToggleBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>